{% include "CustomProjectBundle::header.html.twig" %}

{% set antProvince = '' %}
{% set contador=0 %} 

<div id="zoomContainer" class="zoomContainerClass"></div>
<div id="tipoPagina">sto</div>
<div id="contenedor1">

	<div class="pad10 fs18" id="selectStorePanel">

	{{"Select Zone"|t}}
		
	 <select id="selectZone">
{% for store in ball %}
	{% if  antProvince !=  store.bou_provincia %}
  		<option value={{store.bou_provincia}}>{{store.bou_provincia}}</option>
	{% endif %}
        {% set antProvince=store.bou_provincia %}
{% endfor %} 
</select> 

	</div>

	<div id="storePanel">


	<div>	
			<div class="storeDummy">
				{% include "CustomProjectBundle::login.html.twig" %}			
				{% include "CustomProjectBundle::carritoResumen.html.twig" %}
			</div>
			<div class="storeDummy"></div>
	</div>
	<div id="fotoRow" class="hoverborder hoverbggray">	

{% for store in ball %}
	
	{% if  antProvince !=  store.bou_provincia %}
		 
	</div>
	<b>
	<div province="{{store.bou_provincia}}" class="province center  wd100 mg-top20 mg-bottom20 height30 fs18 borderBottom verticalcenter30">
		{{store.bou_provincia}}
	</div>
	</b>
	<div id="fotoRow" class="hoverbggray">	
	
	{% endif %}
		
	{% set contador=contador+1 %} 
        {% set antProvince=store.bou_provincia %}
			<div province="{{store.bou_provincia}}" class="cursorpointer store margin10">

				<div  class="cell_store align-left inline wd30 fs12 height30">
					<b>{{store.bou_poblacion}}</b>
	{% if store.bou_nombre %}
					 <br>{{store.bou_nombre}}
	{% endif %}		
				</div>
				<div  class="cell_store align-left inline wd20 height30 fs14">
					{{store.bou_direccion}}
				</div> 
				<div  class="cell_store align-left inline wd20 height30 fs14">
					{{'Tel'|t}}. {{store.bou_telefono}}
				</div>
				<div  class="cell_store height30 fs12 align-left">
					{{'Opening hours'|t}}: {{store.bou_descripcion}}
				</div>
			</div>

	</div>
	<div id="fotoRow" class="hoverbggray">

{% endfor %}
	</div>	
	</div>
</div>	

