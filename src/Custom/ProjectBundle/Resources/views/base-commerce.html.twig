      <div class="stiches">
      

<!-- Flash messages -->

      {% for type, flashMessages in app.session.flashbag.all() %}
          {% set flashClass = '' %}
          {% if type == constant('INFO') %}
            {% set flashClass = "flash-ok" %}
          {% endif %}
          {% if type == constant('ERROR') %}
            {% set flashClass = "flash-error" %}
          {% endif %}
          {% for message in flashMessages %}
            <div class="wd100">
              <div class="{{flashClass}}">
                <button type="button" class="close fr" data-dismiss="alert">×</button>
                {{ message }}
              </div>
            </div>
          {% endfor %}
      {% endfor %}
