	{% else %}
			<span class="precio"><span class="tachado">&nbsp;&nbsp; </span>&nbsp;&nbsp<span class="tachado">{{ product.firstPrice  | round(2,'common')}} €</span>  &nbsp;&nbsp  {{product.pricePVP | round(0,'floor')}}<span class="precioDecimal">,{{ product.pricePVP | decimals  }} €</span>&nbsp;&nbsp;<span class="tachado">&nbsp;&nbsp;&nbsp </span></span>
	{%endif%}
			</div>
