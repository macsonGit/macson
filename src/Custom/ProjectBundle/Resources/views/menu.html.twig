<a href='{{ path('macson_category',{'lang' : lang , 'category' :subitem3.name, 'categorynames' :subitem3.url|toUrl} ) }}'><li class="selected"  id='item3'>{{subitem3.namecat}}</li></a>	
				{% endif %}
				{% if subitem3.sons is defined  %}
					{% for subitem4 in subitem3.sons if (subitem4.show and subitem3.selected) %}
