{% if existsShipping == true %}
<div class="oh wd100 mg-bottom10">
  <a href='{{ path('drufony_checkout_billing_use_shipping', {'lang': lang})}}' class="fl-link-secondary">{{ "Use shipping address" | t }}</a>
</div>
{% endif %}

<label class="label">
  {{ form_label(form.name) }}
  {% if form.name.vars.required %}
    <span>*</span>
  {% endif %}
</label>
{{ form_errors(form.name) }}
<label class="input">
  {{ form_widget(form.name) }}
</label>

<div class="clearfix">
  <label class="label">
  {{ form_label(form.nif) }}
  {% if form.nif.vars.required %}
    <span>*</span>
  {% endif %}
  </label>
  {{ form_errors(form.nif) }}
  <label class="input">
  {{ form_widget(form.nif) }}
  </label>
</div>

