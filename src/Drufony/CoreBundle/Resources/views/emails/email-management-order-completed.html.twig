<br>	

</table>

<table width="100%">
<tr>
	<td width="50" align:"center"><b>{{'Units'|t}}</b></td>
	<td width="100" align:"center">
		<b>{{ 'Reference'|t}}</b>
	</td>
	<td width="250" align:"center">
		<b>{{ 'Product'|t}}</b>
	</td>
	<td width="80" align:"center">
		<b>{{ 'Size'|t}}</b></td>
	</td>
	<td align:"center"><b>{{ 'Price'|t}}</b></td>

</tr>
{% for item in customParams.cart %}
<tr>
	<td align:"center">{{ item.quantity }}</td>
	<td align:"center">
		{{ item.sgu  }}
	</td>
	<td align:"center">
		{{ item.title }}
	</td>
	<td align:"center">{{ item.varieties }}</td>
	<td align:"center"><p>{{ item.pricePVP | round(0,'floor')}},{{ item.pricePVP | decimals  }} €</p></td>
</tr>

{% endfor %}
</table>	
