<div class="disIB wd20 mg-right10">
{{ form_label(addressForm.phone) }}
</div>
<div class="disIB wd69">
{{ form_widget(addressForm.phone, { 'attr': {'class': 'wd30 pad10 mg-bottom20 radius5'} }) }}
</div>
<div class="wd100 mg-vertical10 align-right">
{{ form_widget(addressForm.send, { 'attr': {'class': 'action-button' }}) }}
</div>
{{ form_end(addressForm) }}
</div>
</div>
</div>
</div>
